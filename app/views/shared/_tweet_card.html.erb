<div class="col-12 border border-info p-3 mt-2">
        <div class="row">
            <div class='col-1'>
                <%= image_tag (tweet.user.photo_url), :class => "avatar-in-tweet rounded" %>
            </div>
            <div class="col-11">
                <span class="username"><%= tweet.user.username%> dice:</span></br>
                <span class="date"><%= link_to '<i class="far fa-calendar-alt" aria_hidden="true"></i>'.html_safe+distance_of_time_in_words(Time.now, tweet.created_at), tweet%></span></br>
                <div class="tweet-content p-3 mb-2"><%= tweet.content %></div>
                <% if tweet.is_retweet? %>
                    <%= link_to "Retweet...", tweet.tweet_ref %>
                <% end %>
            </div>


            <div class="float-right">
                <div class="p3 text-right mb-2 tweet_options">
                    <span>
                        <%= tweet.likes.count %>
                        <%= link_to ('<i class="'+tweet.tweet_icon(current_user)+' text-danger"></i>').html_safe, tweet_likes_path(tweet), method: :post %>
                    </span>
                    |
                    <span>
                        <%= tweet.count_rt %> 
                        <%= link_to ('<i class="fas fa-retweet '+tweet.retweet_icon+'"></i>').html_safe, tweet_retweet_path(tweet), method: :post %>
                    </span>
                </div>
            </div>
        </div>
    </div>